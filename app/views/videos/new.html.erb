<div class="container" style="padding-top:100px;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h2 class="text-center">Video nuevo</h2>

        <%= form_with scope: :video, url: videos_path, local: true do |form| %>
            <div class="form-group">
                <%= form.label :email %><br>
                <%= form.text_field :email, class: "form-control" %>
            </div>

            <%= form.hidden_field :url, :value => @concurso[:url]%>

            <div class="form-group">
                <%= form.label :nombres %><br>
                <%= form.text_field :nombres, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= form.label :apellidos %><br>
                <%= form.text_field :apellidos, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= form.label :video %><br>
                <%= form.file_field :video, class: "form-control" %>
            </div>
        
            <div class="form-group">
                <%= form.submit "Participar", class:"btn btn-default btn-lg btn-block"%>
            </div>
        <% end %>
    </div>
  </div>
</div>